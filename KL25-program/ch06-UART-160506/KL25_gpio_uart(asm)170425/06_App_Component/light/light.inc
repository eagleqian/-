#ifndef LIGHT_INC
#define LIGHT_INC

.include "gpio.inc"

#指示灯端口及引脚定义
.equ LIGHT_RED,(PTB_NUM|19)    @红色RUN灯使用的端口/引脚
.equ LIGHT_BLUE,(PTB_NUM|9)    @蓝色RUN灯使用的端口/引脚
.equ LIGHT_GREEN,(PTB_NUM|18)  @绿色RUN灯使用的端口/引脚

#灯状态宏定义（灯亮、灯暗对应的物理电平由硬件接法决定）
.equ LIGHT_ON,0     @灯亮
.equ LIGHT_OFF,1    @灯暗

#============================================================================
# 函数名称：  light_init
# 函数返回： 无
# 参数说明：r0:(端口号)|(引脚号),例:(PTB_NUM|(5u))表示B口5脚,头文件中有宏定义
#          r3:设定小灯状态。由light.inc中宏定义。
# 功能概要：  指示灯驱动初始化
#============================================================================
 .global light_init

#============================================================================
# 函数名称：    light_control
# 函数返回：     无                
# 参数说明：   r0：(端口号)|(引脚号),例:(PTB_NUM|(5u))表示B口5脚,头文件中有宏定义
#            r3：设定小灯状态。由light.inc中宏定义。
# 功能概要：控制指示灯亮暗。
#============================================================================
 .global light_control

#============================================================================
# 函数名称：    light_change
# 函数返回：     无                
# 参数说明：    r0:(端口号)|(引脚号),例:(PTB_NUM|(5u))表示B口5脚,头文件中有宏定义
# 功能概要：切换指示灯亮暗。
#============================================================================
 .global light_change 


#endif
